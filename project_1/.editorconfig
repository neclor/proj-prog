root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
indent_style = tab
indent_size = 4
tab_width = 4

[Makefile]
indent_style = tab
tab_width = 4

[*.{c,h}]
indent_style = space
indent_size = 3
tab_width = 3
